<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Articles</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
        <p> <%= Article.count %> articles</p>
    </div>
  </div>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-6">
          <div class="card-article p-3">
            <%= cl_image_tag article.photo.key %>
            <div class="card-article-infos d-flex align-items-center justify-content-between">
              <div>
                <h2 class="mr-3"><%= article.title %></h2>
                <p class="mr-3"><%= article.description %></p>
                <p><%= link_to "Lire l'article", article_path(article), class: "btn btn-ghost" %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
